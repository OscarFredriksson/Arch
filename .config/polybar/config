[colors]

bar = #2b303b
foreground = #b2b2b2
background = #414858
urgent = #dd0000

yellow = #ebcb8b
magenta = #b48ead
cyan = #96b5b4
green = #a3be8c
red = #bf616a

[bar/main]
width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
fixed-center = true

background = ${colors.bar}
foreground = ${colors.foreground}

line-size = 4
